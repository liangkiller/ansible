[client]
port="{{ mysql_port }}"
default-character-set="{{ charset }}"

[mysql]
{% if mysql_version|int >= 8 %}
local_infile = 1
{% endif %}
socket="{{ socket }}"
default-character-set="{{ charset }}"
no_auto_rehash

[mysqld]
user="{{ user }}"
port="{{ mysql_port }}"
basedir="{{ base_dir }}"
datadir="{{ data_dir }}"
socket="{{ socket }}"
log-error="{{ error_log_path }}"
pid-file="{{ pid_path }}"
character-set-server="{{ charset }}"
collation-server="{{ collation }}"
slow_query_log=1
long_query_time=3
slow_query_log_file="{{ slow_log_dir }}/slow_query.log"
default_password_lifetime=0
server_id="{{ server_id }}"
log-bin="{{ bin_log_dir }}/mysql-bin"
binlog_format=ROW
sync_binlog="{{ sync_binlog }}"
binlog-row-image=minimal
binlog_group_commit_sync_delay="{{ binlog_group_commit_sync_delay }}"
binlog_group_commit_sync_no_delay_count="{{ binlog_group_commit_sync_no_delay_count }}"
{% if mysql_version|int >= 8 %}
binlog_expire_logs_seconds="{{ expire_logs_days *24*60*60 }}"
default-authentication-plugin=mysql_native_password
local_infile = 1
mysqlx=OFF
{% else %}
expire_logs_days="{{ expire_logs_days }}"
innodb_large_prefix=1
query_cache_type=0
query_cache_size=0
{% endif %}
{% if gtid_enable == 'yes' %}
gtid_mode=on
enforce_gtid_consistency=on
{% endif %}
#log-slave-updates=1
skip-character-set-client-handshake
wait_timeout=600
interactive_timeout=600
connect_timeout=30
net_read_timeout=60
net_write_timeout=120
explicit_defaults_for_timestamp=1 
max_connections=1000
max_connect_errors = 30
skip_external_locking 
#skip_name_resolve
read_only=0
event_scheduler=0
default-storage-engine=INNODB
innodb_strict_mode=1 
innodb_file_per_table=1
innodb_buffer_pool_size="{{ innodb_buffer_pool_size }}"
innodb_io_capacity="{{ innodb_io_capacity }}"
innodb_flush_neighbors=1
innodb_log_file_size="{{ innodb_log_file_size }}"
innodb_flush_log_at_trx_commit="{{ innodb_flush_log_at_trx_commit }}"
innodb_stats_on_metadata=0
innodb_data_home_dir=
innodb_data_file_path="{{ data_dir }}/ibdata1:4095M:autoextend"
innodb_temp_data_file_path="{{ innodb_temp_data_file_path }}/ibtmp1:12M:autoextend:max:50G"
innodb_log_group_home_dir="{{ innodb_log_group_home_dir }}"
innodb_buffer_pool_instances = 8
innodb_read_io_threads = 64
innodb_write_io_threads = 64
transaction_isolation=READ-COMMITTED
key_buffer_size=256M
max_allowed_packet=16M
sort_buffer_size=2M
read_buffer_size=2M
read_rnd_buffer_size=2M
join_buffer_size=2M
sql_mode=NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES
tmp_table_size=128M
max_heap_table_size=128M
group_concat_max_len=64K
table_open_cache=2048
thread_cache_size=1024
log_bin_trust_function_creators=1
open_files_limit=60000
lower_case_table_names=1

[mysqld_multi]
mysqld=/usr/bin/mysqld_safe
mysqladmin=/usr/bin/mysqladmin

[mysqldump]
quick
[myisamchk]
key_buffer_size = 20M
sort_buffer_size = 20M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout
[mysqld_safe]
pid-file="{{ pid_path }}"